<body background ="https://images.unsplash.com/photo-1549980384-d61217e50c4b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTJ8fGNsYXNzcm9vbXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60">

<div class="cover mb-4 d-flex align-items-center justify-content-center" >
 <h1 id="classrooms_index"></h1>
</div>


<br>
<div class="search box">
   <%= form_tag classrooms_path, method: :get do %>
   <div class="search-event mb-4 d-flex" >
    <%= text_field_tag :query,
      params[:query],
      class: "form-control mr-3",
      placeholder: "Find a class..."
    %>

      <%= submit_tag "Search", class: "btn search-btn" %>
      </div>
  <% end %>
</div>


<div class="cover mb-4 d-flex align-items-center justify-content-center" >
  <div class= "row justify-content-center">
    <% @classrooms.each do |classroom| %>
      <div class ="col-10">
        <div class="card-product">
          <div class="card-product-infos">
            <%= link_to classroom_students_path(classroom) do %>
              <h2><i class="fas fa-chalkboard"></i>&ensp;&ensp;<%= classroom.level%></h2>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
