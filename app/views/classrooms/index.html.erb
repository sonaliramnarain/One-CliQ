<br>
<div class="cover mb-4 d-flex align-items-center justify-content-center" >
  <h1>Class</h1>
</div>

<br>
<div class="search box"> 
   <%= form_tag classrooms_path, method: :get do %>
   <div class="search-event mb-4 d-flex" >
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a class..."
    %>
      
      <%= submit_tag "Search", class: "btn search-btn" %>
      </div>
  <% end %>
</div>


<div class="cover mb-4 d-flex align-items-center justify-content-center" >
<div class= "row ">
<div class ="col">
  <% @classrooms.each do |classroom| %>
    <div class="card-product">
      <div class="card-product-infos">
        <%= link_to classroom_path(classroom) do %>
          <h2><%= classroom.level%></h2>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
</div>
</div>