<div class="event-show">
<div class= "container py-5 mb-40">
  <div class= "d-flex align-items-center justify-content-center mb-4">
   <h2><strong>Edit this event</strong><h2>
  </div>


    <div class= "bg-white rounded shadow h-100 card-body align-items-center py-5 form-new">
        <%= form_for(@event) do |f| %>
          <div>
          <%= f.label :name %>
          <%= f.text_field :name %>
          </div>
          <br>
          <div>
          <%= f.label :event_description %>
          <%= f.text_field :event_description%>
          </div>
          <br>
          <div>
           <%= f.label :additional_information %>
           <%= f.text_field :additional_information%>
          </div>
          <br>
          <div>
          <%= simple_form_for ([@event]), remote: true do |f| %>
          <%= f.input :date, as: :date, html5: true, input_html: {class: 'form-input'} %>
         </div>
          <div class= "d-flex align-items-center justify-content-center mb-4">
              <%= f.submit "update", class: 'btn btn-gradient' %>
              <%= link_to 'Cancel', :back, class: 'btn btn-ghost' %>
          </div>
      <% end %>
      <% end %>
    </div>
</div>
</div>
