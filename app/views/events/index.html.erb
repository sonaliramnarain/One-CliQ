<br>
<div class="cover mb-4 d-flex align-items-center justify-content-center" >
 
  <h1>Events</h1>
</div>

<br>
<div class="search box">
   <%= form_tag events_path, method: :get do %>
   <div class="search-event mb-4 d-flex" >
    <%= text_field_tag :query,
      params[:query],
      class: "form-control mr-4",
      placeholder: "Find an event..."
    %>

      <%= submit_tag "Search", class: "btn search-btn" %>
      </div>
  <% end %>
</div>

<body background ="https://media.istockphoto.com/photos/chalkboard-background-xxxl-picture-id503240055?b=1&k=20&m=503240055&s=170667a&w=0&h=zDJXtajMTfMChO9_RBkoZ-YCdbfRo_UrXl6mdqQu8_U=">

<div class="cover mb-4 d-flex align-items-center justify-content-center" >
<div class= "row ">
<div class ="col">
  <% @events.each do |event| %>
    <div class="card-product">
      <div class="card-product-infos">
        <%= link_to event_path(event) do %>
          <h2><i class="fas fa-calendar-check"></i>&ensp;&ensp;<%= event.name%></h2>
          <p>&ensp;&ensp;<%= event.updated_at %></p>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="cover mb-4 d-flex align-items-center justify-content-center" >
          <%= link_to "Add", new_event_path(@event), class: 'text-center', class: 'btn btn-add m-4'%>
          </div>
</div>
</div>
</div>
