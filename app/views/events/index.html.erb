<div class="sky-background py-4">


<div class="cover mt-4 mb-4 d-flex align-items-center justify-content-center" >
  <h1 id="event_index"></h1>
</div>

<br>
<div class="search box">
   <%= form_tag events_path, method: :get do %>
   <div class="search-event mb-4 d-flex" >
    <%= text_field_tag :query,
      params[:query],
      class: "form-control mr-4",
      placeholder: "Find an event..."
   %>

      <%= submit_tag "Search", class: "btn search-btn" %>
      </div>
  <% end %>
</div>



<div class="container cover mb-4 d-flex align-items-center justify-content-center">
  <div class= "row justify-content-center w-100">
   <div class="col-11">
     <% @events.each do |event| %>
       <div class="card-product">
         <div class="card-product-infos">
           <%= link_to event_path(event) do %>
             <h2><i class="fas fa-calendar-check"></i>&ensp;&ensp;<%= event.name%></h2>
             <p>&ensp;&ensp;<%= event.date.strftime("%A %d %B") %></p>
           <% end %>
         </div>
       </div>
     <% end %>
     <div class="cover mx-auto d-flex align-items-center justify-content-center" >
       <%= link_to "Add", new_event_path(@event), class: 'text-center', class: 'btn btn-add m-4'%>
     </div>
   </div>
  </div>
</div>
