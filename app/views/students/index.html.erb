<h1>Student Lists 👨‍🎓</h1>

<div class="search box">
   <%= form_tag students_path, method: :get do %>
  <div class="search-event mb-2 d-flex" >
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a Student..."
    %>
    <%= submit_tag "Search", class: "btn search-btn" %>
  </div>
  <% end %>
</div>

<% @students.each do |event| %>
  <%= link_to student_path(student) do %>
   <h2><%= student.name %></h2>
   <p><%= student.classroom %></p>
  <%end%>
<%end %>
   <%= link_to "Add", new_student_path(@student), class: 'btn btn-add m-4' %>
