<div class="student mb-4 d-flex align-items-center justify-content-center" >
 <h1>Student Lists 🎓</h1>
</div>

<div class="search box">
   <%= form_tag classroom_students_path, method: :get do %>
  <div class="search-event mb-2 d-flex" >
    <%= text_field_tag :query,
      params[:query],
      class: "form-control mr-3",
      placeholder: "Find a Student..."
    %>
    <%= submit_tag "Search", class: "btn search-btn" %>
  </div>
  <% end %>
</div>


<div class="cover mb-4 d-flex align-items-center justify-content-center" >
  <div class= "row justify-content-center">
    <% @students.each do |student| %>
      <div class ="col-12">
        <div class="card-product">
          <img src= "<%= student.photo %>" />
          <div class="card-product-infos">
            <%= link_to student_path(student) do %>
              <h2><i class="fas fa-graduation-cap"></i>&ensp;&ensp;<%= student.name %></h2>
              <p>&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;<%= student.classroom.level %></p>
            <% end %>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
            <div class ="wrapper">
              <input type="checkbox" >
            </div>
          </div>
        </div>


      </div>
    <% end %>
    <div class="cover mb-4 d-flex align-items-center justify-content-center" >
      <%= link_to "Add", new_student_path(@student), class: 'text-center', class: 'btn btn-add m-4'%>    
    </div>
  </div>
</div>
