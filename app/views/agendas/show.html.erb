<div class= "container py-5 mb-40">
  <div class= "d-flex align-items-center justify-content-center mb-4">
   <h2><strong>Agenda</strong><h2>
  </div>

  <div class= "container">
    <div class="d-flex row justify-content-center">
     <div class="col-sm-8">
       <div class="card bg-light my-3">
         <div class="card-body d-flex align-items-center">
           <h2><strong>Agenda Name: <%= @agenda.name %></strong></h2>
          </div>

          <ul class="list-group list-group-flush">
           <li class="list-group-item">
             <p><strong>Date: <%= @agenda.date %></strong></p>
             <p><strong>Start_time: <%= @agenda.start_time %></strong></p>
             <p><strong>End_time: <%= @agenda.end_time %></strong></p>
           </li>
          </ul>
          <%= link_to "update", edit_agenda_path(@agenda), class: 'text-center', class: 'btn btn-gradient m-4'%>
          <%= link_to "Delete",agenda_path(@agenda), method: :delete,data: { confirm: "Are you sure?" },class: 'text-center', class: 'btn btn-ghost m-4' %>
        </div>

        <div class= "d-flex align-items-center justify-content-center mb-4">
          <%= link_to 'Back', agendas_path(@agenda), class: 'text-center', class: 'btn btn-gradient m-4' %>
        </div>

      <div>
    </div>
  </div>
</div>
