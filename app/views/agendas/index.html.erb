
<div class="cover mb-4 d-flex align-items-center justify-content-center" >
  <h1>Agendas</h1>
</div>
<div class="cover mb-4 d-flex align-items-center justify-content-center" >
<div class= "row ">
  <div class ="col">
    <% @agendas.each do |agenda| %>
        <div class="card-product">
          <div class="card-product-infos">
            <%= link_to agendas_path(agenda) do %>
              <h2><%= agenda.teacher.subject %></h2>
              <p><%= agenda.start_time.strftime("%A")%></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
     <div class="cover mb-4 d-flex align-items-center justify-content-center" >
        <%= link_to "Add", new_agenda_path(@agenda), class: 'text-center', class: 'btn btn-add m-4'%>
      </div>
  </div>
</div>
